{
  "extends": ["config:best-practices", ":disableRateLimiting"],
  "automerge": false,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": ["github-actions", "pip_requirements"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchManagers": ["custom.regex", "ansible-galaxy"],
      "automerge": false
    }
  ],
  "enabledManagers": ["github-actions", "pip_requirements", "regex", "ansible-galaxy"],
  "assignees": ["pluggero"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^defaults/main\\.yml$"],
      "matchStrings": ["lazygit_version:\\s+\"(?<currentValue>[\\d\\.]+)\""],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "jesseduffield/lazygit",
      "versioningTemplate": "semver"
    }
  ]
}
